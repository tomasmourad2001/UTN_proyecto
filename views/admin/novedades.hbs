<div class="container" style="margin-top: 50px;">
    <div class="row">
        <p class="text-end">Hola {{usuario}}! <a class="btn btn-danger" href="/admin/login/logout">Cerrar sesi√≥n <i
                    class="fas fa-sign-out-alt"></i></a></p>
    </div>
    <div class="row">
        <div class="col-7" style="margin-top:-9px ;">
            <h2>Listado de Novedades</h2>
        </div>
        <div class="col-2 text-end">
            <a href="/admin/novedades/agregar" class="btn btn-success">
                <i class="fas fa-plus"></i> Nuevo
            </a>
        </div>
        <div class="col-3 text-right">
            <form action="/admin/novedades" class="d-flex" method="get">
                <input type="search" class="form-control me-2" placeholder="Buscar" aria-label="Search" name="q" {{#if q}} value="{{q}}" {{/if}}>
                <button class="btn btn-dark" style="border-radius: 48%;" type="submit">
                    <i class="fa fa-search" aria-hidden="true"></i>
                </button>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <table class="table" style="margin-top: 15px;">
                <thead>
                    <tr class="table-dark">
                        <th scope="col">#</th>
                        <th scope="col">Titulo</th>
                        <th scope="col" class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each novedades}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{titulo}}</td>
                        <td class="text-end">
                            <a href="/admin/novedades/modificar/{{id}}" class="btn btn-outline-secondary"><i
                                    class="fas fa-pencil-alt"></i></a>
                            <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-outline-secondary"><i
                                    class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            {{#if is_search}}
                {{#unless novedades.length}}
                No se encontraron resultados para "<b>{{q}}</b>"
                {{/unless}}
            {{/if}}
        </div>
    </div>
</div>